<% layout('layouts/boilerplate') %> <% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          placeholder="Campground Title"
          required
        />
        <div class="valid-feedback">Looks Great!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          placeholder="Campground Location"
          required
        />
        <div class="valid-feedback">Keep Going!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1">$</span>
          <input
            type="text"
            class="form-control"
            placeholder="0.00"
            id="price"
            name="campground[price]"
            aria-label="Price"
            aria-describedby="price-label"
            required
          />
          <div class="valid-feedback">Almost there!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="campground[imgUrl]"
          placeholder="Campground Image Url"
          required
        />
        <div class="valid-feedback">You got this!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          placeholder="Campground Description"
          required
        ></textarea>
        <div class="valid-feedback">Nailed it!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
  </div>
</div>
<a href="/campgrounds">All Campgrounds</a>
