<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campgrounds = {features: <%-JSON.stringify(campgrounds)%>}
</script>
<script src="/javascripts/clustermap.js"></script>
<div id="cluster-map"></div>
<div></div>
<% for(let camp of campgrounds) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <%if(camp.images.length){%>
      <img src="<%=camp.images[0].url%>" alt="" class="img-fluid" />
      <%} else {%>
      <img
        src="https://res.cloudinary.com/dtk2pykqu/image/upload/v1644780593/YelpCamp/asukqwgx6orqyr6xgx3q.jpg"
        alt=""
        class="img-fluid"
      />
      <%}%>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=camp.title%></h5>
        <p class="card-text"><%=camp.description%></p>
        <p class="card-text">
          <small class="text-muted"> <%=camp.location%> </small>
        </p>
        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary"
          ><%=camp.title%></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
